<Window x:Class="Snake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake"
        mc:Ignorable="d"
        Title="Window1" Height="800" Width="1000"
        KeyDown ="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="275*"/>
            <RowDefinition Height="509*"/>
        </Grid.RowDefinitions>
        <Canvas Name="GameCanvas" Background="Black" Height="600" Width="800" Grid.RowSpan="2" Margin="100,92,100,92"/>
        <TextBlock Name="txbScore"
                   FontSize="32"
                   Foreground="White"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="222,0,0,0" Height="46" Width="75" Background="#FFB80F9B" FontFamily="Algerian" FontWeight="Bold" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Height="46" Margin="10,0,0,0" TextWrapping="Wrap" Text="Vaše skóre:" VerticalAlignment="Top" Width="212" Background="#FFB80F9B" Foreground="White" FontSize="32" FontWeight="Bold" FontFamily="Algerian"/>
        <TextBlock x:Name="txbLastScore" HorizontalAlignment="Left" Height="46" Margin="302,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="308" Background="#FFB80F9B" Foreground="White" FontFamily="Algerian" FontSize="32" FontWeight="Bold"/>
        <TextBlock x:Name="txbHighScore" HorizontalAlignment="Left" Height="46" Margin="615,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="336" Background="#FFB80F9B" Foreground="White" FontFamily="Algerian" FontSize="32" FontWeight="Bold"/>
    </Grid>
</Window>
